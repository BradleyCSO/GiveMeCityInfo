@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!-- Banner -->
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <img class="background-image img-fluid w-100" src="//unsplash.it/1920/1080" alt="" />
        </div>
    </div>
</div>

<div id="background-split"></div>
<div id="background-split2"></div>

<form method="post">
    <label for="" class="form-label">Location</label>
    <input type="text" asp-for="Search.SearchQuery" placeholder="Please enter a location" />
    <button class="btn btn-primary "type="submit">Submit</button>
</form>


<h1>Continents</h1>

<h1>Activities</h1>

<style>
    label {
        display: inline-block;
        margin-bottom: 5px;
        vertical-align: top;
    }

    * {
        overflow: hidden;
    }

    form {
        position: absolute;
        left: 80vw;
        margin-top: 70vh;
    }

    .background-image {
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    #background-split {
        z-index: -1;
        position: absolute;
        height: 100%;
        top: 0;
        width: 200vw;
        left: 52%;
        background: #ffaa66;
        opacity: 0.5;
        transform: skewX(-32deg);
        border-left: 15px solid salmon;
    }
</style>
